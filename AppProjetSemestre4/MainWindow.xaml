<Window x:Class="AppProjetSemestre4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppProjetSemestre4"
        mc:Ignorable="d"
        Title="Projet semestre 4" 
        Height="600" Width="1000" 
        Background="#FF4B4B4B"

    >

    <Window.Resources>

        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="OverridesDefaultStyle" Value="False"/>
            <Setter Property="Background" Value="#FF4B4B4B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Medium"/>

                </Trigger>
            </Style.Triggers>

            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF323232" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="CadetBlue"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <ControlTemplate x:Key="TreeViewItemTemplate" TargetType="TreeViewItem">
            <Border Width="240" Height="18" CornerRadius="6" Background="{TemplateBinding Background}">
                <ScrollViewer
                            x:Name="PART_ContentHost"
                            Focusable="false"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden" />
            </Border>
        </ControlTemplate>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF828282"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Medium"/>
                    <Setter Property="Background" Value="#FF2D2D2D"/>  <!--Veut pas fonctionner-->
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Border Width="85" Height="23" CornerRadius="6" Background="{TemplateBinding Background}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="LancerTemplate" TargetType="Button">
            <Border Width="95" Height="35" CornerRadius="6" Background="{TemplateBinding Background}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

    </Window.Resources>
    
    <Grid Margin="10,10,10,10" Background="#FF222222">

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="70"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="203"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="275" />
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="2" Grid.Column="1" BorderBrush="#FF828282" BorderThickness="3" CornerRadius="6" Grid.RowSpan="3" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="275" Height="325.2">
            <TreeView  Background="#FF4B4B4B"  Foreground="White">

                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True"/>
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeViewItem Header ="Traitement d'image" Foreground="White" BorderBrush="#FF828282" FontSize="14" >
                   
                    <TreeViewItem Selected="Traitement_Click" x:Name="NeB" Header="Noir et Blanc" Foreground="White" Background="#FF4B4B4B" Style="{StaticResource TreeViewItemStyle}" Template="{StaticResource TreeViewItemTemplate}" Height="15" Width="192" Cursor="Hand"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Ro" Header="Rotation" Foreground="White" Style="{StaticResource TreeViewItemStyle}" />
                    <TreeViewItem Selected="Traitement_Click" x:Name="AeR" Header="Agrandissement et Rétressissement" Foreground="White"  Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Em" Header="Effet Miroir"  Foreground="White" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="DdC" Header="Détection de contours" Foreground="White"  Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="RdB" Header="Renforcement des bords" Foreground="White"  Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Fl" Header="Flou" Foreground="White" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Rpg" Header="Repoussage" Foreground="White" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Frl" Header="Fractale" Foreground="White" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Hst" Header="Histogramme" Foreground="White"  Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="CeD" Header="Coder et Décoder une image" Foreground="White" Style="{StaticResource TreeViewItemStyle}"/>
                </TreeViewItem>

                <TreeViewItem Header="QR code" Foreground="White" BorderBrush="#FF828282" FontSize="14" Margin="0,5,0,0">
                    <TreeViewItem Selected="Traitement_Click" x:Name="Cr" Header="Creation" Foreground="White" BorderBrush="#FF828282" Style="{StaticResource TreeViewItemStyle}"/>
                    <TreeViewItem Selected="Traitement_Click" x:Name="Le" Header="Lecture" Foreground="White" BorderBrush="#FF828282" Style="{StaticResource TreeViewItemStyle}" />
                </TreeViewItem>

                <TreeViewItem Selected ="Traitement_Click" x:Name="Cry" Header="Cryptographie" Foreground="White" BorderBrush="#FF828282" FontSize="14" Margin="0,0,5,0" Style="{StaticResource TreeViewItemStyle}" Cursor="Hand"/>

            </TreeView>
        </Border>


        <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
            <Border BorderBrush="#FF828282" BorderThickness="3" CornerRadius="6" Width="375" HorizontalAlignment="Left" VerticalAlignment="Stretch" Height="67">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Image à traiter" Foreground="White" Margin="5,2,0,0" FontSize="14" />
                        <Button Click="Image_Click" ClickMode="Press" Content="Parcourir" FontSize="14" Foreground="White" Background="#FF4B4B4B" Margin="5,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ToolTip="Cliquez pour sélectionner une image dans le gestionnaire de fichiers" Cursor="Hand" Style="{StaticResource ButtonStyle}" Template="{StaticResource ButtonTemplate}"/>

                    </StackPanel>
                    <StackPanel Grid.Column ="1" >
                        <TextBlock Text="Emplacement de sortie" Foreground="White" Margin="5,2,0,0" FontSize="14" />
                        <Button Click="Save_Click" ClickMode="Press" Content="Parcourir" FontSize="14" Foreground="White" Background="#FF4B4B4B" Margin="5,10,0,0" HorizontalAlignment="Left" ToolTip="Cliquez pour sélectionner une image dans le gestionnaire de fichiers" Cursor="Hand" Style="{StaticResource ButtonStyle}" Template="{StaticResource ButtonTemplate}"/>

                    </StackPanel>

                </Grid>
            </Border>

            <Button Click="Lancer_Click" ClickMode="Press" Content="Lancer" FontSize="16" Foreground="White" Style="{StaticResource ButtonStyle}" Template="{StaticResource LancerTemplate}" Margin="15,0,0,0" Background="#FF4B4B4B" ToolTip="Cliquez pour lancer le programme, le résultat apparaitra dans la fenêtre en dessous" Cursor="Hand"/>
        </StackPanel>

        <Border Grid.Column="3" Grid.Row="3" Grid.RowSpan="2" BorderBrush="#FF828282" BorderThickness="3" CornerRadius="6" Width="500" HorizontalAlignment="Center" Background="#FF828282" Height="285">
            <Image x:Name="ImageBox" Source="/foret riviere.bmp" Stretch="Uniform" Width="493" Height="279" />
        </Border>

    </Grid>
    


</Window>
